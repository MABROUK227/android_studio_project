<resources>
    <!-- Base application theme. -->
    <style name="Theme.Tales" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_primary</item>
        <item name="colorPrimaryVariant">@color/purple_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/button_blue</item>
        <item name="colorSecondaryVariant">@color/purple_light</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/purple_header</item>
        <!-- Background color. -->
        <item name="android:windowBackground">@color/green_background</item>
        <!-- Text appearance. -->
        <item name="android:textViewStyle">@style/TalesTextViewStyle</item>
        <item name="buttonStyle">@style/TalesButtonStyle</item>
    </style>
    
    <style name="TalesTextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/purple_primary</item>
        <item name="android:fontFamily">casual</item>
    </style>
    
    <style name="TalesButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/button_blue</item>
        <item name="android:padding">12dp</item>
        <item name="cornerRadius">24dp</item>
    </style>
</resources>
